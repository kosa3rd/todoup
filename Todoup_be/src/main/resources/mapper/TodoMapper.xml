<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kosa.todoup.dao.TodoDAO">
    <!-- 할일 생성 -->
    <insert id="insertTodo" parameterType="com.kosa.todoup.dto.TodoDTO">
        insert into TODO_LIST (USER_ID, TITLE, CATEGORY
        <if test="memo != null">
            , MEMO
        </if>)
        values (#{userId}, #{title}, #{category}
        <if test="memo != null">
            , #{memo}
        </if>)
    </insert>

</mapper>
